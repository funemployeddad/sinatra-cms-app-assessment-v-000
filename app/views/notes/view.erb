<h4><%= @note.title %></h4>

<p><%= @note.content %></p>

<form action="/notes/<%=@note.slug%>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Note">
</form>

<form action="/notes/<%=@note.slug%>/edit" method="get">
  <button type="submit">Edit Note</button>
</form>
